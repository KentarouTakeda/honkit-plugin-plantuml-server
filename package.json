{
  "name": "honkit-plugin-plantuml-server",
  "version": "1.3.0",
  "description": "PlantUML plugin for HonKit. No Java or Graphviz required.",
  "engines": {
    "honkit": "*",
    "node": ">=18"
  },
  "homepage": "https://github.com/KentarouTakeda/honkit-plugin-plantuml-server",
  "bugs": {
    "url": "https://github.com/KentarouTakeda/honkit-plugin-plantuml-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KentarouTakeda/honkit-plugin-plantuml-server.git"
  },
  "keywords": [
    "diagrams",
    "gitbook",
    "honkit",
    "plantuml",
    "plugin",
    "uml"
  ],
  "files": [
    "dist/"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "eslint --fix 'src/**/*.ts' '__tests__/**/*.ts'",
    "fix:prettier": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
    "prepare": "husky install 2>/dev/null || true",
    "test": "jest --verbose"
  },
  "author": "KentarouTakeda",
  "license": "MIT",
  "dependencies": {
    "mkdirp": "^3.0.1",
    "node-fetch": "^2.6.7",
    "plantuml-encoder": "^1.4.0",
    "png-strip-chunks": "^0.3.3",
    "promise-retry": "^2.0.1",
    "svgo": "^3.0.0"
  },
  "devDependencies": {
    "@swc/core": "^1.2.244",
    "@swc/jest": "^0.2.22",
    "@tsconfig/node16-strictest": "^1.0.0",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.19.3",
    "@types/node-fetch": "^2.6.2",
    "@types/promise-retry": "^1.1.3",
    "@types/svgo": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
